/*
 * Base Styling
*/
html {
  position: relative;
  min-height: 100%;
}
body > .container { // top level wrapper in layout, applys to any container that an immediate child of body, i.e. main
  padding: 70px 6px 72px 6px; // top right bottom left
}
main {                   // main page container, without menu or footer
  @extend .container;
}
article {                     // a whole page typically
  @extend .container;
  padding: 6px 6px 72px 6px; // top right bottom left
}
section {                     // a piece of a page
  @extend .row;
  overflow: auto;
}
.route_table { // Rails Route Info Table
  @extend .table;
  @extend .table-striped;
  @extend .table-hover;
}
div.show > table {  // Rails Properties Table
  @extend .table;
  @extend .table-striped;
  @extend .table-hover;
}
.psqueez { // give user table a little more room
  padding: 0px 0px 0px 12px;
}
.test-squeez { // give about and help pages a little more room
  padding: 2px 0px 8px 0px;
}

div.dataTables_filter > label > input[type="search"] {
  width: 320px;
}

/* Sticky footer styles
 -------------------------- */
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 66px;
  background-color: #eee;
}
.footer > .container {
  padding-top: 15px;
}

.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
  color: #fffe86;  /*Sets the text hover color on navbar*/
}
.navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active >
a:hover, .navbar-default .navbar-nav > .active > a:focus {
  color: white; /*BACKGROUND color for active*/
  background-color: #030033;
}
.navbar-default {
  background-color: #0f006f;
  border-color: #030033;
}
.dropdown-menu > li > a:hover,
.dropdown-menu > li > a:focus {
  color: #262626;
  text-decoration: none;
  background-color: #66CCFF;  /*change color of links in drop down here*/
}
.nav > li > a:hover,
.nav > li > a:focus {
  text-decoration: none;
  background-color: silver; /*Change rollover cell color here*/
}
.navbar-default .navbar-nav > li > a {
  color: white; /*Change active text color here*/
}


