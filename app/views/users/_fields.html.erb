<%# Read This: http://simple-form.plataformatec.com.br/ %>

<fieldset>
<legend>User details</legend>
  <%= f.input :name, :size => 45, label: "Full Name", autofocus: true %>
</fieldset>
<fieldset>
    <legend>Sign In Credentials</legend>
    <%= f.input :username, label: 'User Name' %>
    <%= f.input :email, label: 'Email'  %>
    <%= f.input :password, label: 'Password'  %>
    <%= f.input :password_confirmation, label: 'Confirmation'  %>
</fieldset>
<% if authenticated? && current_user.is_admin? %>
    <fieldset>
    <legend>Access Details</legend>
      <%= f.input :user_options, collection:  SknSettings.security.user_options, checked: @user.user_options, input_html: { multiple: true, class: 'selectpicker' }, include_blank: false, label: "Security Options" %>
      <%= f.input :assigned_groups, collection: @page_controls.groups.map(&:first), checked: @user.assigned_groups, input_html: { multiple: true, class: 'selectpicker' }, include_blank: false, label: "Groups" %>
      <%= f.input :assigned_roles, collection: @page_controls.roles.map(&:first), checked: @user.assigned_roles, input_html: { multiple: true, class: 'selectpicker' }, include_blank: false, label: "Individual Roles" %>
      <%= f.input :active, inline_label: "Active", label: "Account status" %>
    </fieldset>
<% end %>
